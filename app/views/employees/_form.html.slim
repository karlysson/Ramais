= simple_form_for(@employee) do |f|
  = f.error_notification

  .form-inputs
    = f.association :store, collection: Store.order(:name)
    = f.association :departament, collection: Departament.order(:name)
    p Sexo:
    = f.select(:sex,['M','F'])
    / = f.input :sex
    = f.input :name
    = f.input :email
    = f.input :phone

  .form-actions
    = f.button :submit
